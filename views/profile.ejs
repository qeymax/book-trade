<% include ./partials/header.ejs %>
  <% include ./partials/topbar.ejs %>
    <% include ./partials/flash.ejs %>

 <form id="registerForm" class="ui form" method="POST">
      <h1>Edit Profile</h1>
      <br>
      <div class="field">
        <label>Username</label>
        <input class="" type="text" readonly="" name="username" value="<%= currentUser.username %>">
      </div>
      <div class="required field">
        <label>Full Name</label>
        <input type="text" name="fullname" placeholder="Full Name" value="<%= currentUser.fullname %>">
      </div>
      <div class="required field">
        <label>Email</label>
        <input type="email" name="email" placeholder="Email" value="<%= currentUser.email %>">
      </div>
      <div class="field">
        <label>New Password</label>
        <input type="password" name="newpassword" placeholder="New Password">
      </div>
      <div class="field">
        <label>Repeat Password</label>
        <input type="password" name="repeatpassword" placeholder="Repeat Password">
      </div>
      <div class="required field">
        <label>Country</label>
        <input type="text" name="country" placeholder="Country" value="<%= currentUser.country %>">
      </div>
      <div class="required field">
        <label>Password</label>
        <input type="password" name="password" placeholder="Password">
      </div>
      <button class="ui fluid button" type="submit">Submit</button>
    </form>



